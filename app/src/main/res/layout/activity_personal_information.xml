                android:text="0977777777777"
                android:backgroundTint="@color/grey"
                android:textColor="@color/black"
                android:textSize="@dimen/owner_name_text_size" />
        </LinearLayout>

        <!--ph no2 text-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/personal_info_layout_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_phone_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/personal_info_phone_num2"
                android:textColor="@color/grey"
                android:textSize="@dimen/owner_personal_info_text_size" />

            <EditText
                android:id="@+id/et_phone_num2"
                android:layout_width="match_parent"
